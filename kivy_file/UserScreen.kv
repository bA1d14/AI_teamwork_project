<UserScreen>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'vertical'
            id:main_container
            padding:0,10,30,0
            size_hint:1,0.35
            canvas:
                Color:
                    rgb: app.theme_cls.primary_color

                Rectangle:
                    pos:self.x,self.y
                    size: self.width, self.width
            MDToolbar:
                size_hint:None,None
                size:root.width,root.height*0.05
                md_bg_color:0,0,0,0
                elevation: 0
                left_action_items: [["arrow-left", lambda x:root.move_to_homepage()]]
                right_action_items: [["settings", lambda x: root.close()]]
            BoxLayout:
                orientation:'horizontal'
                padding:20,0,0,0
                BoxLayout:
                    id:image_container
                    size_hint:None,None
                    size:root.width*0.15, root.height*0.15
                    pos_hint:{"center_x": .5, "top": 1}
                    canvas:
                        Color:
                            rgb: 1, 1, 1
                        Ellipse:
                            group:'a'
                            pos:self.x,self.y
                            size: self.width, self.width
                            source: 'templates/image/pngegg.png'
                            angle_start: 0
                            angle_end: 360
                MDLabel:
                    id:user_name
                    text:'User Name'
                    size_hint:None,None
                    size:root.width*0.3, root.width*0.01
                    pos_hint:{"center_x": 0,"center_y": 0.5}
                    halign:'center'
                    valign: 'middle'
                    theme_text_color: "Custom"
                    text_color:1,1,1,1
                    bold:True
                    font_size:20

        FloatLayout:

            MDLabel:
                text:'Account'
                size_hint:1,0.05
                pos_hint:{"center_x": 0.58,"top": 0.97}
                theme_text_color: "Custom"
                text_color: 0, 0.4, 1, 1
            MDList:
                id:info
                pos_hint:{"center_x": 0.55,"top": 0.95}

            FloatLayout:


                MDFloatingActionButton:
                    icon:'pencil'
                    theme_text_color: 'Custom'
                    text_color: 0, 0, 0, 0.9
                    md_bg_color: 1,1,1,1
                    pos_hint:{"center_x": 0.9,"center_y": 1}
