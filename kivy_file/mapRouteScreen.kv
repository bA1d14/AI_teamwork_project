<MapRouteScreen>:


    Map:
        id:route_map
        FloatLayout
            pos: root.width*0.5,root.height*0.85
            size: root.width*1,root.height*0.2
            MDTextFieldRound:
                id: text_field
                size_hint:0.8,0.25

                pos_hint: {"center_x": .0, "center_y": .5}
                normal_color: rgba(256,256,256,256)
                color_active: 1, 1, 1, 1
                padding:
                    self._lbl_icon_left.texture_size[1]*5 + dp(10)

            ScrollView
                pos_hint: {"center_x": .0, "center_y": -0.4}
                size_hint:0.8,1.5
                canvas.after:

                MDList:

                    id: button_container


            MDIconButton:
                icon:'magnify'

                #size_hint:0.1,0.15
                user_font_size: "24sp"
                pos_hint: {"center_x": 0.4, "center_y": .5}
                pos: text_field.width - self.width + dp(8), 0
                on_release:root.find_route(text_field.text)
            MDFloatingActionButton:
                icon:'filter'
                md_bg_color: app.theme_cls.primary_color
                pos: root.width*0.83,root.height*0.05
                on_release:root.manager.current="filterScreen"