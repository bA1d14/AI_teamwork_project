<Homepage>:

    MDBackdrop:
        back_layer_color:app.theme_cls.primary_color
        header:False
        left_action_items:[['lightbulb-on-outline',lambda x: self.open()],]
        right_action_items: [["heart", lambda x: root.favorite_route_screen()],["map-search", lambda x: root.routeScreen() ], ["account", lambda x: root.userScreen()]]
        MDBackdropBackLayer:

            Carousel:
                MDFloatLayout:
                    MDCard:
                        size_hint: .9, .58
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Advice 1"
                            halign: "center"
                MDFloatLayout:
                    MDCard:
                        size_hint: .9, .58
                        pos_hint: {"center_x": .5, "center_y": .5}
                        MDLabel:
                            text: "Advice 2"
                            halign: "center"
        MDBackdropFrontLayer:


            FloatLayout:
                size_hint:None,None
                size:root.width,root.height*1

                #spacing:1
                orientation:'vertical'
                BoxLayout:
                    size_hint: None,None
                    size:root.width,root.height*1

                    radius: [30, 30, 30, 0]
                    id:map_container
                    cols:1
                    pos_hint: {"center_x": .5, "center_y": .4}


                MDFlatButton:
                    size_hint: None,None
                    size:root.width,root.height*0.05

                    pos_hint: {"center_x": .5, "top": 0.05}
                    theme_text_color: 'Custom'
                    text_color: 0, 0, 1, 0.9
                    text:"Wrong? Try to choose your location"
                    md_bg_color: 0.1, 0.1, 0.1, 0.1

                    on_release:root.manager.current="mapScreen"
                MDFloatingActionButton:
                    icon: "crosshairs-gps"

                    pos_hint: {"center_x": .9, "top": 0.25}
                    md_bg_color: 1,1,1,0.9
                    on_release:root.show_location()
